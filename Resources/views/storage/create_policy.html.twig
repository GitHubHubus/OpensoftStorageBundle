{% extends 'admin/layout.html.twig' %}

{% block title %}Storage File Type Policies - Create Policy{% endblock %}

{% block breadcrumb %}
    <h2>Storage Policies</h2>
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('admin_homepage') }}">Admin</a>
        </li>
        <li>
            Configuration
        </li>
        <li>
            Storage
        </li>
        <li>
            <a href="{{ path('opensoft_storage_list_storages') }}">File Storage</a>
        </li>
        <li>
            <a href="{{ path('opensoft_storage_list_storage_policies') }}">Polices</a>
        </li>
        <li class="active">
            <strong>Create Policy</strong>
        </li>
    </ol>
{% endblock breadcrumb %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Create Policy for {{ types[policy.type] }}</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    {% include "@OpensoftStorage/storage/policy_form.html.twig" with {'form': form, 'action': path('opensoft_storage_create_storage_policy', {'type': policy.type})} %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
